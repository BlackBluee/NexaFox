<UserControl x:Class="NexaFox.Views.Pages.PortMonitor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NexaFox.Views.Pages"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="Button" x:Key="SearchButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12 6"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="#1976D2"
                            BorderThickness="1"
                            CornerRadius="4"
                            SnapsToDevicePixels="True">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" 
                                            ShadowDepth="2" 
                                            Color="#40000000"/>
                            </Border.Effect>

                            <ContentPresenter x:Name="Content"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <!-- Hover Effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#1976D2"/>
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#0D47A1"/>
                                <Setter TargetName="ButtonBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="12" 
                                                    ShadowDepth="3" 
                                                    Color="#60000000"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Pressed Effect -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#0D47A1"/>
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#002171"/>
                                <Setter TargetName="Content" Property="Margin" Value="12 7"/>
                                <Setter TargetName="ButtonBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="6" 
                                                    ShadowDepth="1" 
                                                    Color="#20000000"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="3"/>
        </Style>

        <Style TargetType="Button" x:Key="ConnectButton">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8 4"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Style="{StaticResource SearchButton}" 
                Content="SZUKAJ 🔎" 
                Width="160" 
                Height="50" 
                Margin="10" 
                HorizontalAlignment="Left"
                Click="SearchButton_Click"/>

        <DataGrid x:Name="PortsGrid" 
                  Grid.Row="1" 
                  Margin="10" 
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  ItemsSource="{Binding PortEntries}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="IP" Binding="{Binding IP}" Width="*"/>
                <DataGridTextColumn Header="Port" Binding="{Binding Port}" Width="80"/>
                <DataGridComboBoxColumn Header="Usługa" 
                                      SelectedItemBinding="{Binding Service}"
                                      Width="120">
                    <DataGridComboBoxColumn.ItemsSource>
                        <x:Array Type="{x:Type system:String}">
                            <system:String>HTTP</system:String>
                            <system:String>SSH</system:String>
                            <system:String>FTP</system:String>
                        </x:Array>
                    </DataGridComboBoxColumn.ItemsSource>
                </DataGridComboBoxColumn>
                <DataGridTemplateColumn Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource ConnectButton}" 
                                    Content="Połącz" 
                                    Command="{Binding ConnectCommand}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
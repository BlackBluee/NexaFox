<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:vm="clr-namespace:NexaFox.ViewModels"
                xmlns:views="clr-namespace:NexaFox.Views.Pages">
    <DataTemplate DataType="{x:Type vm:WebBrowserViewModel}" x:Shared="False">
        <views:WebBrowser />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:PortMonitorViewModel}" x:Shared="False">
        <views:PortMonitor/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:SSHViewModel}" x:Shared="False">
        <views:ClientSSH/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:FTPViewModel}" x:Shared="False">
        <views:ClientFTP/>
    </DataTemplate>

    <Style TargetType="Button" x:Key="BaseButton">
        <Setter Property="Foreground" Value="#CCCCCC"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                        CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#3E3E3E"/>
            </Trigger>
        </Style.Triggers>
    </Style>


    <Style TargetType="Button" x:Key="WindowControlButton" BasedOn="{StaticResource BaseButton}">
        <Setter Property="Width" Value="48"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
    </Style>

    <Style TargetType="Button" x:Key="CloseButtonStyle" BasedOn="{StaticResource WindowControlButton}">
        <Setter Property="Background" Value="Transparent"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#E81123"/>
            </Trigger>
        </Style.Triggers>
    </Style>


    <Style TargetType="Button" x:Key="SidebarButton" BasedOn="{StaticResource BaseButton}">
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Margin" Value="4"/>
    </Style>


    <Style TargetType="TabControl" x:Key="MainTabControl">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

</ResourceDictionary>